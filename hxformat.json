{
  "indentation": {
    "character": "  "
  },
  "whitespace": {
    "colonPolicy": "after",
    "caseColonPolicy": "after",
    "objectFieldColonPolicy": "after",
    "typeCheckColonPolicy": "after",
    "typeHintColonPolicy": "after"
  },
  "wrapping": {
    "maxLineLength": 80,
    "functionSignature": {
      "defaultWrap": "keep"
    },
    "arrayWrap": {
      "defaultWrap": "keep"
    }
  }
}
