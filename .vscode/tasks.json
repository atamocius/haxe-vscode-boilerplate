{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug: flash",
      "command": "haxe",
      "args": [
        "config/build.hxml",
        "-D",
        "fdb",
        "-debug",
        "-swf",
        "bin/debug/flash/app.swf"
      ],
      "problemMatcher": [
        "$haxe-absolute",
        "$haxe",
        "$haxe-error",
        "$haxe-trace"
      ],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "debug: js",
      "command": "haxe",
      "args": ["config/build.hxml", "-debug", "-js", "bin/debug/js/app.js"],
