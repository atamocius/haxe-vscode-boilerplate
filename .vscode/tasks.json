{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug: flash",
      "command": "haxe",
      "args": ["config/build-debug-flash.hxml"],
      "problemMatcher": [
        "$haxe-absolute",
        "$haxe",
        "$haxe-error",
        "$haxe-trace"
      ],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "debug: js",
